<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Wipe Note</title>

  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" crossorigin="anonymous">
  <link rel="stylesheet" href="/assets/bundles/styles.css">
</head>
<body>

{% block header %}
  {% include "../partials/header.njk" %}
{% endblock %}

<div id="app" class="container">
{% block content %}{% endblock %}
</div>
<script src="/assets/bundles/main.js"></script>

{% block footer %}
  {% include "../partials/footer.njk" %}
{% endblock %}

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script>
  $('.toggle').on('click', function() {
  $('.button_container').toggleClass('active-btn');
  $('#overlay').toggleClass('open');
  $('.logo-panel').toggleClass('logo-open');
  $('#top-panel-mob').toggleClass('panel-open');
}); 

function textAreaAdjust(element) {
  element.style.height = "1px";
  element.style.height = (element.scrollHeight)+"px";
}
</script>

</body>
</html>
